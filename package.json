{
	"name": "@constantiner/resolve-node-configs-hierarchy",
	"version": "0.2.0",
	"description": "Simple library to resolve configuration files hierarchy in Node projects for merging them into effective configuration",
	"main": "resolve-node-configs-hierarchy",
	"scripts": {
		"test": "npx jest --config jest.config.json",
		"lint": "npx eslint '**/*.js'",
		"build": "npx gulp clean && npx gulp es6modules",
		"format": "npx prettier 'src/*.js' '__tests__/*.js' --write",
		"prepublishOnly": "npm run clean && npm run lint && npm run test && npm run build",
		"clean": "npx gulp clean",
		"clear_jest": "npx jest --clearCache"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Constantiner/resolve-node-configs-hierarchy.git"
	},
	"keywords": [
		"Env",
		"dotenv",
		"Node",
		"Node.js",
		"configuration"
	],
	"author": "Konstantin Kovalev <constantiner@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Constantiner/resolve-node-configs-hierarchy/issues"
	},
	"homepage": "https://github.com/Constantiner/resolve-node-configs-hierarchy#readme",
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"tabWidth": 4
	},
	"engines": {
		"node": ">=7.6",
		"npm": ">=5.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.1.5",
		"@babel/preset-env": "^7.1.5",
		"babel-core": "^7.0.0-bridge.0",
		"babel-jest": "^23.6.0",
		"del": "^3.0.0",
		"eslint": "^5.8.0",
		"eslint-config-prettier": "^3.1.0",
		"gulp": "^4.0.0",
		"gulp-better-rollup": "^3.4.0",
		"gulp-rename": "^1.4.0",
		"jest": "^23.6.0",
		"jest-pnp-resolver": "^1.0.1",
		"mock-fs": "^4.7.0",
		"prettier": "^1.15.1",
		"regenerator-runtime": "^0.12.1"
	},
	"dependencies": {
		"@constantiner/fun-ctional": "^0.6.2"
	}
}
